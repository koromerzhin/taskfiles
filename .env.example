# Configuration pour Taskfiles Collection
# Copier ce fichier vers .env et ajuster les valeurs selon vos besoins

# Informations du projet
PROJECT_NAME=taskfiles-collection
PROJECT_VERSION=1.0.0
ENVIRONMENT=development

# Variables Docker (si utilisées)
CONTAINER_NAME=
IMAGE_NAME=
STACK_NAME=taskfiles-stack

# Variables de monitoring
TIMEOUT=300
CHECK_INTERVAL=10
LOG_LEVEL=INFO

# Variables Node.js (si utilisées)
NODE_ENV=development
PORT=3000

# Variables de sauvegarde
BACKUP_DIR=./backups

# Variables de téléchargement d'outils
TOOLS_DIR=./tools/php
FORCE=false